# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=dao_governance.settings.production

# Database Settings
DB_ENGINE=django.db.backends.postgresql
DB_NAME=dao_governance
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=postgres
DB_PORT=5432

# MongoDB Settings
MONGO_URI=mongodb://mongo:27017/dao_governance

# Neo4j Settings
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# InfluxDB Settings
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=dao_governance
INFLUXDB_BUCKET=governance_metrics

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_DEFAULT=100/h

# Treasury Settings
TREASURY_MULTISIG_THRESHOLD=5
TREASURY_GUARDIANS=9
TREASURY_RESERVE_RATIO=0.3

# Governance Settings
PROPOSAL_DISCUSSION_PERIOD_DAYS=14
PROPOSAL_VOTING_PERIOD_DAYS=7
PROPOSAL_TIMELOCK_HOURS=48
PROPOSAL_QUORUM_PERCENTAGE=45
PROPOSAL_APPROVAL_THRESHOLD=70
MAX_VOTING_POWER_PERCENTAGE=25 